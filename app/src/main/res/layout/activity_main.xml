<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:accessibilityLiveRegion="polite"
    android:background="@drawable/abc_list_longpressed_holo">

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Add Punch In "
        android:id="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:onClick="addPunchIn"/>


    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Add Punch Out"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="addPunchOut"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="175dp"
        android:text="Punch In"
        android:id="@+id/button3"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="punchIn"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="175dp"
        android:text="Punch Out"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:onClick="punchOut"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Status: "
        android:textSize="@dimen/abc_text_size_headline_material"
        style="@style/Base.TextAppearance.AppCompat.SearchResult.Title" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/highlighted_text_material_light"
        android:backgroundTintMode="src_over"
        android:background="@color/background_material_light"
        android:clickable="true"
        android:id="@+id/tableLayout">

    </TableLayout>

</RelativeLayout>
